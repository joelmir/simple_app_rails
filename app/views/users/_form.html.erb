<%= simple_form_for(@user) do |f| %>
    <%= f.input :name %>
    <%= f.input :email, placeholder: 'exemplo@exemplo.com' %>
    <%= f.input :birthday, as: :string,  input_html: { class: 'datepicker', value: @user.birthday.nil? ? "" : @user.birthday.strftime("%d/%m/%Y") } %>
    <% @accounts.each do |account| %>
      <%= check_box_tag :account_ids, account.id, @user.accounts.include?(account), :name => 'user[account_ids][]' %>
      <%= account.name %><br />
    <% end %>
    <%= f.button :submit %>
<% end %>
